.ui.input.icon {
  background: #fff;

  > input {
    z-index: 2;
    background: transparent;
  }

  > .ion-icon {
    position: absolute;
    top: 50%;
    right: 10px;
    transform: translateY(-50%);

    &.action-btn {
      z-index: 3;
      cursor: pointer;
    }

    &.disabled {
      cursor: not-allowed;
    }
  }
}
